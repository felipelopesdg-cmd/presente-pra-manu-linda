      position: relative;
      z-index: 2;
    }

    /* Presente animado */
    #presente {
      font-size: 3rem;
      cursor: pointer;
      animation: bounce 2s infinite, glow 2s infinite alternate;
    }
    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }
    @keyframes glow {
      0% { text-shadow: 0 0 5px #ff69b4, 0 0 10px #ff69b4; }
      100% { text-shadow: 0 0 20px #ff69b4, 0 0 40px #ff1493; }
