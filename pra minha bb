  <!-- Player do YouTube (m√∫sica autom√°tica) -->
  <div id="player">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/W7JI_SQaXpU?start=25&autoplay=1&loop=1&playlist=W7JI_SQaXpU" 
      title="YouTube video player" frameborder="0" allow="autoplay; encrypted-media; accelerometer; clipboard-write; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>

  <script>
    let tempo = 10;
    const contador = document.getElementById("contador");
    const mensagem = document.getElementById("mensagem");
    const presente = document.getElementById("presente");
    const conteudo = document.getElementById("conteudoPresente");
    const player = document.getElementById("player");

    // Fun√ß√£o para criar part√≠culas de cora√ß√£o
    function criarCoracao() {
      const coracao = document.createElement("div");
      coracao.classList.add("particula");
      coracao.textContent = "üíñ";
      coracao.style.left = Math.random() * window.innerWidth + "px";
      coracao.style.fontSize = (10 + Math.random() * 30) + "px";
      coracao.style.animationDuration = (4 + Math.random() * 4) + "s";
      document.body.appendChild(coracao);
      setTimeout(() => coracao.remove(), 8000);
    }

    // Fun√ß√£o para criar brilhos
    function criarBrilho() {
      const brilho = document.createElement("div");
      brilho.classList.add("brilho");
      brilho.style.left = Math.random() * window.innerWidth + "px";
      brilho.style.width = (2 + Math.random() * 6) + "px";
      brilho.style.height = brilho.style.width;
      brilho.style.animationDuration = (3 + Math.random() * 3) + "s";
      document.body.appendChild(brilho);
      setTimeout(() => brilho.remove(), 6000);
    }

    // Criar part√≠culas continuamente
    setInterval(criarCoracao, 400);
    setInterval(criarBrilho, 300);

    // Contagem regressiva
    const intervalo = setInterval(() => {
      tempo--;
      contador.textContent = tempo;
      if (tempo === 0) {
        clearInterval(intervalo);
        contador.style.display = "none";
        mensagem.style.display = "block";
        presente.style.display = "block";
        setTimeout(() => {
          mensagem.style.opacity = 1;
          presente.style.opacity = 1;
        }, 50);
      }
    }, 1000);

    // Ao clicar no presente
    presente.addEventListener("click", () => {
      conteudo.style.display = "block";
      player.style.display = "block"; // mostra o player do YouTube
      setTimeout(() => { 
        conteudo.style.opacity = 1; 
        player.style.opacity = 1;
      }, 50);
      presente.style.display = "none";
      mensagem.style.display = "none";
    });
  </script>
